<div class="relative bg-blue-500 py-24 text-white">
  <div class="absolute top-0 right-0 mr-20 w-64 h-64 border-[30px] border-blue-600 rotate-45 translate-y-16 md:-translate-x-96"></div>
  <div class="relative container mx-auto px-10">
    <div class="mb-10 flex items-center space-x-4 md:space-x-8">
      <div>
        <h2 class="text-6xl md:text-9xl font-extrabold text-transparent bg-clip-text bg-gradient-to-br from-green-400 to-green-600 rounded-lg shadow shadow-green-400">2</h2>
      </div>
      <div>
        <img src="https://cdn.pixabay.com/photo/2014/08/14/11/15/diamond-417896_960_720.png" alt="blue diamond image" width="150" class="transform scale-95 md:scale-110">
      </div>
      <div>
        <h2 class="text-2xl md:text-3xl font-extrabold">What People Say</h2>
      </div>
    </div>
    <div class="relative mb-4 md:w-3/5 mx-auto p-4 bg-red-400 rounded shadow">
      <div class="absolute top-0 left-0 w-8 h-8 border-4 hover:border-[6px] border-blue-700 hover:border-blue-400 rotate-45 transform -translate-x-10 md:-translate-x-16 translate-y-24 hover:scale-150 transition duration-500">
        <a href="#" id="back" class="inline-block hover:scale-110"><img src="https://img.icons8.com/?size=100&id=16084&format=png&color=FFFFFF" alt="arrow icon" width="30" class="transform -rotate-45"></a>
      </div>
      <div class="absolute top-0 right-0 mr-2 w-8 h-8 border-4 hover:border-[6px] border-blue-700 hover:border-blue-400 rotate-45 transform translate-x-10 md:translate-x-16 translate-y-24 hover:scale-150 transition duration-500">
        <a href="#" id="forward" class="inline-block hover:scale-x-110"><img src="https://img.icons8.com/?size=100&id=16051&format=png&color=FFFFFF" alt="arrow icon" width="40" class="tranform -rotate-45"></a>
      </div>
      <div id="testimonial-container">
        <% testimonials.each_with_index do |testimonial, index| %>
          <div class="testimonial <%= 'active' if index == 0 %>">
            <div class="relative mb-4 flex items-center justify-center space-x-4">
              <div class="border-4 border-pink-500 rounded-full">
                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-gradient-to-r from-pink-100 to-pink-200">
                  <svg class="w-7 h-7 text-pink-600 animate-pulse" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l1.75 5.5h5.5l-4.5 3.25 1.75 5.5L12 13.5l-4.5 3.25L9.25 10.75 4.75 7.5h5.5L12 2z" />
                  </svg>
                </div>
              </div>
              <div class="md:flex items-center md:space-x-2">
                <p class="font-bold"><%= testimonial.first_name.capitalize %> <%= testimonial.last_name.capitalize %></p>
                <p class="hidden md:inline-block w-1 h-4 bg-pink-500 rounded"></p>
                <p class="opacity-60 text-xs md:text-base"><%= testimonial.position.upcase %> at <%= testimonial.company.titleize %></p>
              </div>
            </div>
            <div>
              <p class="mb-8 leading-relaxed"><%= testimonial.content %></p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="flex items-center justify-center space-x-2" id="pagination-container">
        <% testimonials.each_with_index do |_, index| %>
          <a href="#" class="pagination-link w-2 h-2 <%= 'bg-white' if index == 0 %> bg-pink-500 hover:bg-white rounded transform hover:scale-125 transition duration-300"></a>
        <% end %>
      </div>
    </div>
    <h2 class="md:w-3/5 mx-auto text-4xl md:text-6xl font-bold text-blue-600">Want to know more?</h2>
  </div>
</div>
